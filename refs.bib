	file = {Peltier Decision Processes in Visual Search as a Function of Target Prevalence.pdf:/home/erik/Nextcloud/Literature/attention/Effiency target selection with attention/Peltier Decision Processes in Visual Search as a Function of Target Prevalence.pdf:application/pdf},
