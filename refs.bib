	number = {50},
	journaltitle = {The Journal of Neuroscience},
	shortjournal = {J. Neurosci.},
	author = {Latimer, Kenneth W. and Barbera, Dylan and Sokoletsky, Michael and Awwad, Bshara and Katz, Yonatan and Nelken, Israel and Lampl, Ilan and Fairhall, Adriene L. and Priebe, Nicholas J.},
