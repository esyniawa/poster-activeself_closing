	journaltitle = {Neuroscience and Biobehavioral Reviews},
	shortjournal = {Neurosci Biobehav Rev},
	author = {Miquel, Marta and Vazquez-Sanroman, Dolores and Carbo-Gas, María and Gil-Miravet, Isis and Sanchis-Segura, Carla and Carulli, Daniela and Manzo, Jorge and Coria-Avila, Genaro A.},
	date = {2016-01},
	pmid = {26602022},
	keywords = {Humans, Animals, Cerebellum, Neural Pathways, Learning, Addiction, Behavior, Addictive, Neuroplasticity, Substance-Related Disorders},
	file = {61480360.pdf:/home/erik/Nextcloud/Literature/active self/Addiction Cerebellum/61480360.pdf:application/pdf},
}

@article{jacobMonoaminergicNeuromodulationSensory2018a,
	title = {Monoaminergic Neuromodulation of Sensory Processing},
	volume = {12},
