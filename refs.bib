	file = {conway-tsao-2009-color-tuned-neurons-are-spatially-clustered-according-to-color-preference-within-alert-macaque(1).pdf:/home/erik/Nextcloud/Literature/Color Perception/new/conway-tsao-2009-color-tuned-neurons-are-spatially-clustered-according-to-color-preference-within-alert-macaque(1).pdf:application/pdf},
