@article{tunstallInhibitoryInteractionsSpiny2002,
	title = {Inhibitory Interactions Between Spiny Projection Neurons in the Rat Striatum},
	volume = {88},
	issn = {0022-3077, 1522-1598},
	url = {https://www.physiology.org/doi/10.1152/jn.2002.88.3.1263},
