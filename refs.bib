	journaltitle = {Frontiers in Neuroscience},
	shortjournal = {Front. Neurosci.},
	author = {Paneri, Sofia and Gregoriou, Georgia G.},
	urldate = {2023-03-03},
	date = {2017-09-29},
	langid = {english},
